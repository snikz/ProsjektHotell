<Window x:Class="HotellDesktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="394.776" Width="815.993"
        MinWidth="830"
        MinHeight="400">
    <Grid>
        <TextBox x:Name="searchBox" HorizontalAlignment="Right" Height="23" Margin="0,65,10,0" TextWrapping="Wrap" Text="Search lastname" VerticalAlignment="Top" Width="130" GotFocus="searchBox_GotFocus" LostFocus="searchBox_LostFocus"/>
        <Button x:Name="searchButton" Content="Search in reservations" HorizontalAlignment="Right" Margin="0,93,10,0" VerticalAlignment="Top" Width="130" Click="searchButton_Click"/>
        <Button x:Name="newReservationButton" Content="Add new reservation" HorizontalAlignment="Right" Margin="0,298,10,0" VerticalAlignment="Top" Width="120" Click="newReservation_Click"/>
        <DatePicker x:Name="datePicker" HorizontalAlignment="Right" Margin="250,10,10,0" VerticalAlignment="Top" RenderTransformOrigin="-0.052,0.448" FirstDayOfWeek="Monday" Text="date" SelectedDateChanged="datePicker_SelectedDateChanged"/>
        <Button x:Name="todayDateButton" Content="Date today" HorizontalAlignment="Right" Margin="0,10,150,0" VerticalAlignment="Top" Width="107" Click="todayDateButton_Click"/>
        <ListView x:Name="roomListView" ItemsSource="{Binding}" HorizontalAlignment="Left" Height="310" Margin="26,10,0,0" VerticalAlignment="Top" Width="511" MouseDoubleClick="listView_MouseDoubleClick">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Room number" Width="auto" DisplayMemberBinding="{Binding Path=roomId}"/>
                    <GridViewColumn Header="First name" Width="auto" DisplayMemberBinding="{Binding Path=firstName}"/>
                    <GridViewColumn Header="Last name" Width="auto" DisplayMemberBinding="{Binding Path=lastName}"/>
                    <GridViewColumn Header="Checked in" Width="auto" DisplayMemberBinding="{Binding Path=checkedIn}"/>
                    <GridViewColumn Header="Has notes" Width="auto" DisplayMemberBinding="{Binding Path=notes}"/>

                </GridView>
            </ListView.View>
        </ListView>
        <StackPanel HorizontalAlignment="Right" Height="100" Margin="0,120,10,0" VerticalAlignment="Top" Width="130">
            <RadioButton x:Name="radioLastname" Content="Search lastname" IsChecked="True" Click="radioLastname_Click"/>
            <RadioButton x:Name="radioRoomNumber" Content="Search room number" Click="radioRoomNumber_Click"/>
        </StackPanel>



    </Grid>
</Window>
