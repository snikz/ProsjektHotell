<Window x:Class="HotellDesktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="394.776" Width="665.299">
    <Grid>
        <TextBox x:Name="searchBox" HorizontalAlignment="Right" Height="23" Margin="0,65,10,0" TextWrapping="Wrap" Text="Type in search" VerticalAlignment="Top" Width="120" GotFocus="searchBox_GotFocus"/>
        <Button x:Name="searchButton" Content="Search in reservations" HorizontalAlignment="Right" Margin="0,93,10,0" VerticalAlignment="Top" Width="120" Click="searchButton_Click"/>
        <Button x:Name="newReservationButton" Content="Add new reservation" HorizontalAlignment="Right" Margin="0,300,10,0" VerticalAlignment="Top" Width="120" Click="newReservation_Click"/>
        <DatePicker x:Name="datePicker" HorizontalAlignment="Right" Margin="250,10,10,0" VerticalAlignment="Top" RenderTransformOrigin="-0.052,0.448" FirstDayOfWeek="Monday" Text="date"/>
        <ListView x:Name="listView"  HorizontalAlignment="Left" Height="310" Margin="26,10,0,0" VerticalAlignment="Top" Width="400">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Room number" DisplayMemberBinding="{Binding Path=roomId}"/>
                    <GridViewColumn Header="First name" DisplayMemberBinding="{Binding Path=firstName}"/>
                    <GridViewColumn Header="Last name" DisplayMemberBinding="{Binding Path=lastName}"/>
                    <GridViewColumn Header="Checked in" DisplayMemberBinding="{Binding Path=checkedIn}"/>
                    <GridViewColumn Header="Has notes" DisplayMemberBinding="{Binding Path=notes}"/>

                </GridView>
            </ListView.View>
        </ListView>
        

    </Grid>
</Window>
