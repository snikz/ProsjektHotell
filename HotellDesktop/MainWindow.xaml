<Window x:Class="HotellDesktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="394.776" Width="815.993"
        MinWidth="700"
        MinHeight="400">
    <Grid>
        <TextBox x:Name="searchBox" HorizontalAlignment="Right" Height="23" Margin="0,65,10,0" TextWrapping="Wrap" Text="Type in search" VerticalAlignment="Top" Width="130" GotFocus="searchBox_GotFocus"/>
        <Button x:Name="searchButton" Content="Search in reservations" HorizontalAlignment="Right" Margin="0,93,10,0" VerticalAlignment="Top" Width="130" Click="searchButton_Click"/>
        <Button x:Name="newReservationButton" Content="Add new reservation" HorizontalAlignment="Right" Margin="0,298,10,0" VerticalAlignment="Top" Width="120" Click="newReservation_Click"/>
        <DatePicker x:Name="datePicker" HorizontalAlignment="Right" Margin="250,10,10,0" VerticalAlignment="Top" RenderTransformOrigin="-0.052,0.448" FirstDayOfWeek="Monday" Text="date"/>
        <ListView x:Name="roomListView" ItemsSource="{Binding}" HorizontalAlignment="Left" Height="310" Margin="26,10,0,0" VerticalAlignment="Top" Width="511" MouseDoubleClick="listView_MouseDoubleClick">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Room number" Width="100" DisplayMemberBinding="{Binding Path=roomId}"/>
                    <GridViewColumn Header="First name" Width="100" DisplayMemberBinding="{Binding Path=firstName}"/>
                    <GridViewColumn Header="Last name" Width="100" DisplayMemberBinding="{Binding Path=lastName}"/>
                    <GridViewColumn Header="Checked in" Width="100" DisplayMemberBinding="{Binding Path=checkedIn}"/>
                    <GridViewColumn Header="Has notes" Width="100" DisplayMemberBinding="{Binding Path=notes}"/>

                </GridView>
            </ListView.View>
        </ListView>
        

    </Grid>
</Window>
