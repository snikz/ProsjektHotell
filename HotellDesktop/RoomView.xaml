<Window x:Class="HotellDesktop.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Window1" Height="331.343" Width="398.507">
    <Grid>
        <ListView x:Name="listView" ItemsSource="{Binding}" HorizontalAlignment="Left" Height="143" Margin="45,36,0,45" VerticalAlignment="Top" Width="303">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Room number" DisplayMemberBinding="{Binding Path=roomId}" />
                    <GridViewColumn Header="Status" DisplayMemberBinding="{Binding Path=status}" />
                    <GridViewColumn Header="Note" DisplayMemberBinding="{Binding Path=note}" />
                </GridView>
            </ListView.View>
        </ListView>
        <TextBox x:Name="NoteTextbox" HorizontalAlignment="Left" Height="55" Margin="45,208,0,0" TextWrapping="Wrap" Text="Click to add new notes" VerticalAlignment="Top" Width="169"/>
        <StackPanel HorizontalAlignment="Left" Height="55" Margin="233,208,0,0" VerticalAlignment="Top" Width="94">
            <RadioButton Content="Cleaning" IsChecked="True"/>
            <RadioButton Content="RadioButton"/>
            <RadioButton Content="RadioButton"/>
        </StackPanel>

    </Grid>
</Window>
